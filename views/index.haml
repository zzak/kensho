!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "UTF-8"}/
    %title
      Kensho ~ けんしょう
    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"/stylesheet.css"}
    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"/stylesheets/fancybox.css"}
  %body
    #header
      = haml(:header, :layout=>false)
    #content
      %form{:method=>:post, :action=>'/validate'}
        %label Select a markup type
        .details
          %select{:name=>"type"}
            %option{:value=>"HTML"} HTML
            %option{:value=>"FEED"} FEED
            %option{:value=>"CSS"} CSS
        %label Paste your markup
        .details
          %textarea{:name=>"markup"}
        %input{:type=>"submit", :value=>"Validate"}
    #footer= haml(:footer, :layout=>false)
    %script{:type=>"text/javascript"}
      var rumbleUrl = 'http://railsrumble.com/teams/kensho';
    %script{:type=>"text/javascript", :src=>"http://blog.railsrumble.com/javascripts/rumble-r10-sash.js"}
